{
    "kind": "collectionType",
    "collectionName": "orders",
    "info": {
        "singularName": "order",
        "pluralName": "orders",
        "displayName": "Order",
        "description": ""
    },
    "options": {
        "draftAndPublish": true
    },
    "pluginOptions": {},
    "attributes": {
        "orderNumber": {
            "type": "biginteger",
            "required": true
        },
        "customer": {
            "type": "relation",
            "relation": "manyToOne",
            "target": "api::customer.customer",
            "inversedBy": "orders"
        },
        "productsOrdered": {
            "type": "relation",
            "relation": "oneToMany",
            "target": "api::cart-item.cart-item"
        },
        "orderStatus": {
            "type": "enumeration",
            "enum": [
                "pending",
                "confirmed",
                "shipped",
                "delivered",
                "cancelled"
            ],
            "required": true,
            "default": "pending"
        },
        "paymentStatus": {
            "type": "enumeration",
            "enum": [
                "pending",
                "paid",
                "failed",
                "refunded"
            ],
            "required": true,
            "default": "pending"
        },
        "totalPrice": {
            "type": "decimal",
            "required": true,
            "default": 0
        },
        "subtotalPrice": {
            "type": "decimal",
            "required": true,
            "default": 0
        },
        "shippingFee": {
            "type": "decimal",
            "required": true,
            "default": 0
        },
        "shippingMethod": {
            "type": "enumeration",
            "enum": [
                "standard",
                "express"
            ],
            "default": "standard",
            "required": true
        },
        "billingAddress": {
            "type": "component",
            "repeatable": true,
            "component": "shared.address"
        },
        "orderCreatedAt": {
            "type": "datetime",
            "required": false
        },
        "notes": {
            "type": "text"
        },
        "trackingNumber": {
            "type": "string"
        }
    }
}
