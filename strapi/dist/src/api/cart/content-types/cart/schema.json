{
    "kind": "collectionType",
    "collectionName": "carts",
    "info": {
        "singularName": "cart",
        "pluralName": "carts",
        "displayName": "Cart",
        "description": ""
    },
    "options": {
        "draftAndPublish": true
    },
    "pluginOptions": {},
    "attributes": {
        "customer": {
            "type": "relation",
            "relation": "oneToOne",
            "target": "api::customer.customer",
            "inversedBy": "cart"
        },
        "cartItems": {
            "type": "relation",
            "relation": "oneToMany",
            "target": "api::cart-item.cart-item"
        },
        "guestSessionId": {
            "type": "string"
        },
        "totalPrice": {
            "type": "decimal",
            "required": true
        },
        "cartStatus": {
            "type": "enumeration",
            "enum": [
                "open",
                "completed",
                "abandoned"
            ]
        },
        "orderUpdatedAt": {
            "type": "datetime",
            "required": true
        },
        "discounts": {
            "type": "decimal"
        },
        "taxes": {
            "type": "decimal"
        },
        "currency": {
            "type": "enumeration",
            "enum": [
                "EUR"
            ],
            "required": true,
            "default": "EUR"
        },
        "shippingAddress": {
            "type": "component",
            "repeatable": true,
            "component": "shared.address"
        },
        "notes": {
            "type": "text"
        }
    }
}
