{
    "kind": "collectionType",
    "collectionName": "customers",
    "info": {
        "singularName": "customer",
        "pluralName": "customers",
        "displayName": "Customer",
        "description": ""
    },
    "options": {
        "draftAndPublish": true
    },
    "pluginOptions": {},
    "attributes": {
        "firstName": {
            "type": "string",
            "required": true
        },
        "lastName": {
            "type": "string",
            "required": true
        },
        "email": {
            "type": "email",
            "required": true
        },
        "phone": {
            "type": "string",
            "required": false
        },
        "password": {
            "type": "password",
            "required": true
        },
        "resetPasswordToken": {
            "type": "string",
            "required": true
        },
        "isActive": {
            "type": "boolean",
            "required": true
        },
        "address": {
            "displayName": "address",
            "type": "component",
            "repeatable": false,
            "component": "shared.address"
        },
        "orders": {
            "type": "relation",
            "relation": "oneToMany",
            "target": "api::order.order",
            "mappedBy": "customer"
        },
        "role": {
            "type": "enumeration",
            "enum": [
                "admin",
                "peasant"
            ],
            "required": true,
            "default": "peasant"
        },
        "cart": {
            "type": "relation",
            "relation": "oneToOne",
            "target": "api::cart.cart",
            "mappedBy": "customer"
        }
    }
}
